<Page
    x:Class="DashWall.Dash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DashWall"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Background="Black">
            <TextBlock x:Name="Time" Text="12:34" Margin="100,150,0,0" TextAlignment="Left" FontSize="250" FontFamily="Kozuka Gothic Pro H" FontWeight="Bold" Foreground="White" />
            <TextBlock x:Name="Temp" Text="56°"   Margin="0,150,100,0" TextAlignment="Right" FontSize="250" FontFamily="Kozuka Gothic Pro H" FontWeight="Bold" Foreground="White"/>
        </Grid>
    </Grid>
</Page>
